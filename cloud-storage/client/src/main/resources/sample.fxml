<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>


<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cloud.storage.common.client.Controller">
    <Pane fx:id="pane">
        <HBox fx:id="box" alignment="center" maxHeight="10.0">
            <TextField fx:id="loginArea" editable="true" promptText="Login">
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </TextField>
            <PasswordField fx:id="passArea" promptText="Password"/>
            <Button fx:id="loginBtn" text="Login" maxWidth="Infinity" onAction="#authAction"/>
            <Hyperlink fx:id="registrationLink" maxWidth="Infinity" text="Registration"/>
        </HBox>
    </Pane>
    <HBox alignment="center" VBox.vgrow="ALWAYS">
        <TableView fx:id="clientTable">
            <columns>
                <TableColumn fx:id="nameColumnClient" text="Name"/>
                <TableColumn fx:id="sizeColumnClient" text="Size"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <VBox alignment="CENTER">
            <VBox>
                <Button minWidth="-Infinity" onAction="#sendFile" text="Send" textOverrun="CLIP"
                        maxWidth="Infinity"/>
                <Button onAction="#loadFile" text="Load" maxWidth="Infinity"/>
            </VBox>
        </VBox>
        <TableView fx:id="serverTable">
            <columns>
                <TableColumn fx:id="nameColumnServer" text="Name"/>
                <TableColumn fx:id="sizeColumnServer" text="Size"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

    </HBox>
</VBox>
